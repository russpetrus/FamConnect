@model IEnumerable<FamConnect.Models.ConnectionAction>

@{
    ViewBag.Title = "Index";
}

<h2>Your Connections</h2>

<p>
    <a href="@Url.Action("Create", "ConnectionActions")" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="Add a connection"> <span class="glyphicon glyphicon-plus-sign"></span> Add</a>

</p>
<div class="panel panel-primary">
    <div class="panel-heading"><h4>Connections</h4></div>
    <div class="panel-body">
        <table class="table table-striped table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ConnectionActionDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FamilyMember)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PointsEarned)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConnectionActionDate)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConnectionActionDescription)
                    </td>
                    <td>
                        <img class="img-circle smallProfileImg" src="@item.FamilyMember.PathToMemberPhoto" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PointsEarned)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConnectionActionDate)
                    </td>

                    <td>

                        <a href="@Url.Action("Edit", "ConnectionActions", new { id = item.ConnectionActionId })" class="btn btn-primary btn-sm"> <span class="glyphicon glyphicon-pencil"></span></a>

                        <a href="@Url.Action("Delete", "ConnectionActions", new { id = item.ConnectionActionId })" class="btn btn-danger btn-sm"> <span class="glyphicon glyphicon-trash"></span></a>

                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer text-left">
        <b>Current family points: @{Html.RenderAction("GetPoints", "ConnectionActions");}</b>
    </div>
</div>