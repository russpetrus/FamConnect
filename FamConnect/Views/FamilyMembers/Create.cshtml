@model FamConnect.Models.FamilyMember

@{
    ViewBag.Title = "Create";
}

<div class="createFormWrapper blueText">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">

                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle-thin fa-stack-2x"></i>
                    <i class="fa fa-users fa-stack-1x"></i>
                </span>
                <h2>Add A Family Member</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.FirstName, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   placeholder = HttpUtility.HtmlDecode("&#xf007; First Name"),
                                   style = "font-family:Arial, FontAwesome"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.MemberDOB, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.MemberDOB, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   placeholder = HttpUtility.HtmlDecode("&#xf073; Birthday"),
                                   style = "font-family:Arial, FontAwesome"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.MemberDOB, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.PathToMemberPhoto, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.PathToMemberPhoto, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   placeholder = HttpUtility.HtmlDecode("&#xf03e; Photo"),
                                   style = "font-family:Arial, FontAwesome"
                               }
                           })
                                @Html.ValidationMessageFor(model => model.PathToMemberPhoto, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        @* UserId is set by controller *@
                        @*<div class="form-group">
                                @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Add Family Member" class="btn btn-default centerButton" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        
        <div class="col-md-4"></div>
    </div>
        </div>

</div>





<div>
    @Html.ActionLink("All Family Members", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
