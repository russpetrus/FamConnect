@model FamConnect.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container-fluid" id="LandingPageHero">
    <div class="row">
        <div class="col-md-7 text-center">
            <h1 class="gorditas">Family Connect</h1>
            <h2 class="text-capitalize">The Fun and Easy Way to Promote Family Unity</h2>
            @Html.ActionLink("Current User Login", "Login", "Account", null, new { @class = "btn btn-default" })
        </div>

        <div class="col-md-5 center-block">
            <div class="account-form-wrapper">
                <h2 class="gorditas">Start Connecting Today</h2>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Email, new { @class = "control-label" })*@
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new
                       {
                           @class = "form-control account-form-input",
                           placeholder = HttpUtility.HtmlDecode("&#xf0e0; Email Address"),
                           style = "font-family:Arial, FontAwesome"
                       })
                        </div>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Password, new { @class = "control-label" })*@
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new
                       {
                           @class = "form-control account-form-input",
                           placeholder = HttpUtility.HtmlDecode("&#xf023; Password"),
                           style = "font-family:Arial, FontAwesome"
                       })
                        </div>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })*@
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new
                       {
                           @class = "form-control account-form-input",
                           placeholder = HttpUtility.HtmlDecode("&#xf00c; Confirm Password"),
                           style = "font-family:Arial, FontAwesome"
                       })
                        </div>
                    </div>

                    //adding additional fields to register view to accommodate additions made to the user model and accountviewmodel
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.FamilyName, new { @class = "control-label" })*@
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.FamilyName, new
                       {
                           @class = "form-control account-form-input",
                           placeholder = HttpUtility.HtmlDecode("&#xf0c0; Family Name"),
                           style = "font-family:Arial, FontAwesome"
                       })
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(m => m.PathToFamilyPicture, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.PathToFamilyPicture, new
                       {
                           @class = "form-control account-form-input",
                           placeholder = HttpUtility.HtmlDecode("&#xf03e; Family Photo"),
                           style = "font-family:Arial, FontAwesome"
                       })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-default centered" value="Register" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



<div class="container-fluid" id="LandingColumns">
    <div class="row no-gutter">
        <div class="col-md-4 text-center" id="SetupFamily">
            <span class="fa-stack fa-4x">
                <i class="fa fa-circle-thin fa-stack-2x"></i>
                <i class="fa fa-users fa-stack-1x"></i>
            </span>
            <h3 class="gorditas"> Set Up Your Family </h3>
            <h4>The Team Captain registers the family account and creates the family by adding each family member. </h4>
        </div>
        <div class="col-md-4 text-center" id="Milestone">
            <span class="fa-stack fa-4x">
                <i class="fa fa-circle-thin fa-stack-2x"></i>
                <i class="fa fa-flag fa-stack-1x"></i>
            </span>
            <h3 class="gorditas"> Set a Milestone </h3>
            <h4>The Team Captian selects a desired point goal and enters a reward that will be earned when that Milestone is achieved.</h4>
        </div>
        <div class="col-md-4 text-center" id="ConnectionActions">
            <span class="fa-stack fa-4x">
                <i class="fa fa-circle-thin fa-stack-2x"></i>
                <i class="fa fa-heart fa-stack-1x"></i>
            </span>
            <h3 class="gorditas">Log Connection Actions </h3>
            <h4>The Team Captain logs actions by individual family members that bring members closer together and assigns points.</h4>
        </div>
        <div class="col-md-12 text-center" id="Reward">
            <span class="fa-stack fa-4x">
                <i class="fa fa-circle-thin fa-stack-2x"></i>
                <i class="fa fa-trophy fa-stack-1x"></i>
            </span>
            <h3 class="gorditas">Earn Your Reward </h3>
            <h4>When your family reaches the set point goal to earn a reward, FamilyConnect will notify you that a milestone has been met. It's time to celebrate! It's also time to set another milestone. </h4>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
