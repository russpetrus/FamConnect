@model FamConnect.Models.Milestone

@{
    ViewBag.Title = "Create Your First Milestone";
}

<link href="~/content/firsttimecreateviews.css" rel="stylesheet" />
<div class="container createFormWrapper">
    <div class="row">
        <div class="col-md-12 text-center blueText">
            <span class="fa-stack fa-4x">
                <i class="fa fa-circle-thin fa-stack-2x"></i>
                <i class="fa fa-flag fa-stack-1x"></i>
            </span>
            <h2 class="gorditas blueText">Create Your First Milestone</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.MilestoneReward, new { htmlAttributes = new { @class = "form-control create-form-input",
               placeholder = HttpUtility.HtmlDecode("&#xf091; Enter a Reward"),
               style = "font-family:Raleway, FontAwesome"
           } })
                @Html.ValidationMessageFor(model => model.MilestoneReward, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.MilestonePointsRequired, new { htmlAttributes = new { @class = "form-control create-form-input",
               placeholder = HttpUtility.HtmlDecode("&#xf024; Points Required"),
               style = "font-family:Raleway, FontAwesome"
           } })
                @Html.ValidationMessageFor(model => model.MilestonePointsRequired, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-center">
                <h4 class="orangeText">Click "Create Milestone" to Save and Go to Your Family Dashboard</h4>
                <input type="submit" value="Create Milestone" class="btn btn-default centerButton" />
            </div>
        </div>
    </div>
}
        </div>
        <div class="col-md-3"></div>

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
